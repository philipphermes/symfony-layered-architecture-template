# Auto detect text files and perform LF normalization
* text=auto

# Force LF for shell scripts
*.sh text eol=lf

# Force LF for Dockerfile
Dockerfile text eol=lf

# Force LF for config files
*.ini text eol=lf
Caddyfile* text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.flv binary
*.fla binary
*.swf binary
*.gz binary
*.zip binary
*.7z binary
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary
*.pyc binary
*.pdf binary
*.ez binary
*.bz2 binary
*.swp binary
